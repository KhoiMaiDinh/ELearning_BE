{
  "ts-node": {
    "require": ["tsconfig-paths/register"] // configuration for typeorm migration
  },
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "esModuleInterop": true,
    "importHelpers": true,
    "paths": {
      "@/api": ["src/api"],
      "@/api/*": ["src/api/*"],
      "@/background": ["src/background"],
      "@/background/*": ["src/background/*"],
      "@/common": ["src/common"],
      "@/common/*": ["src/common/*"],
      "@/config": ["src/config"],
      "@/config/*": ["src/config/*"],
      "@/constants": ["src/constants"],
      "@/constants/*": ["src/constants/*"],
      "@/database": ["src/database"],
      "@/database/*": ["src/database/*"],
      "@/decorators": ["src/decorators"],
      "@/decorators/*": ["src/decorators/*"],
      "@/exceptions": ["src/exceptions"],
      "@/exceptions/*": ["src/exceptions/*"],
      "@/filters": ["src/filters"],
      "@/filters/*": ["src/filters/*"],
      "@/generated": ["src/generated"],
      "@/generated/*": ["src/generated/*"],
      "@/guards": ["src/guards"],
      "@/guards/*": ["src/guards/*"],
      "@/interceptors": ["src/interceptors"],
      "@/interceptors/*": ["src/interceptors/*"],
      "@/libs": ["src/libs"],
      "@/libs/*": ["src/libs/*"],
      "@/mail": ["src/mail"],
      "@/mail/*": ["src/mail/*"],
      "@/redis": ["src/redis"],
      "@/redis/*": ["src/redis/*"],
      "@/shared": ["src/shared"],
      "@/shared/*": ["src/shared/*"],
      "@/utils": ["src/utils"],
      "@/utils/*": ["src/utils/*"]
    }
  }
}
